<%= link_to 'Volver', dreams_path, class: "btn btn-info" %>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Retos</h3>
  </div>
  <div class="panel-body">

    <table>
      <thead>
        <tr>
          <th>Contenido</th>
          <th>User</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @microposts.each do |micropost| %>
        <tr>
          <td><%= micropost.content %></td>
          <td><%= micropost.user_id %></td>
          <td><%= image_tag micropost.image.url(:medium) %></td>
          <td><%= link_to 'Mostrar', micropost, class: "btn btn-primary" %></td>
          <td><%= link_to 'Editar', edit_micropost_path(micropost), class: "btn btn-info" %></td>
          <td><%= link_to 'Eliminar', micropost, class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Crear Reto', new_micropost_path, class: "btn btn-primary" %>
