<%= form_for(@solution) do |f| %>
  <% if @solution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@solution.errors.count, "error") %> prohibited this solution from being saved:</h2>

      <ul>
      <% @solution.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <h3> Solución a Reto </h3>
      </div>
      <div class="panel-body">
        <div class="field">
          <label>Reto Número: </label><br>
          <%= f.number_field :micropost_id, class: "form-control", placeholder: "Ingresa aquí el número del reto (si no recuerdas, ve atrás y anótalo.)" %>
        </div>
        <br />
        <div class="field">
          <%= f.label :content %><br>
          <%= f.text_area :content, class: "form-control"   %>
        </div>
        <br />
        <div class="form-group">
          <%= f.label :Evidencia %>
          <%= f.file_field :image, class: "form-control" %>
        </div>
        <br />
        <div class="actions">
          <center><%= f.submit "Crear Solución", class: "btn btn-primary btn-lg" %></center>
          <%= link_to 'Atras', microposts_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
