<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>Inicia sesión</h1>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :email, "Correo" %>
        <%= f.email_field :email, placeholder: "Pon aquí tu correo", class: "form-control", :autofocus => true %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Contraseña" %>
        <%= f.password_field :password, placeholder: "Aquí tu contraseña", class: "form-control" %>
      </div>

      <div class="form-group">
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Recordarme siempre de esta contraseña" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Entrar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>